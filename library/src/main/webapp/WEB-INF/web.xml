	</description>
	<display-name>ImageServlet</display-name>
	<servlet-name>ImageServlet</servlet-name>
	<servlet-class>com.library.action.ImageServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ImageServlet</servlet-name>
	<url-pattern>/ImageServlet</url-pattern>
</servlet-mapping>
</web-app>