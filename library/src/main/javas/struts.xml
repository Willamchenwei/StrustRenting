<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 配置根元素 -->
<struts>
	<constant name="struts.objectFactory" value="spring" />
	<package name="library" extends = "struts-default">
		<action name="loginAction" method="login" class = "userAction" >
			<result name = "success">login.jsp</result>
		</action>
		<action name="registerAction" method = "addUser" class = "userAction">
			<result name = "success">load.jsp</result>
		</action>
		<action name="createImageAction" class = "createImageAction">
			<result name = "success">index.jsp</result>
		</action>
	</package>

</struts>
